<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/light">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USER ACCOUNT "
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@color/medium"
        android:textColor="@color/dark"/>


    <ImageButton
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW SCHEDULE OF CLASSES"
        android:textSize="24sp"
        android:id="@+id/viewAvailableRoomUserButton"

        android:background="@color/light"
        android:src="@drawable/p1"/>
    <TextView
        android:paddingLeft="112dp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW SCHEDULE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>


    <ImageButton
        android:layout_gravity="center"
        android:padding="0dp"
        android:id="@+id/viewClassesUserButton"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVAILABLE FREE ROOMS"
        android:textSize="24sp"
        android:background="@color/medium"
        android:src="@drawable/p3"/>
    <TextView
        android:paddingLeft="112dp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND ROOM"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>