<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/light">
    <Button
        android:id="@+id/signUpWelcomeButton"
        android:layout_width="121dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="33dp"
        android:textColor="@color/dark"
        android:background="@color/medium"

        android:text="Sign Up"

        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />

    <Button
        android:id="@+id/loginWelcomeButton"
        android:layout_width="109dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/dark"
        android:background="@color/medium"
        android:layout_alignTop="@+id/signUpWelcomeButton"
        android:layout_marginEnd="57dp"

        android:text="LOGIN"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Save The Time App"
        android:textColor="@color/dark"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/textView6"
        android:layout_width="303dp"
        android:layout_height="109dp"
        android:layout_centerInParent="true"
        android:text="The User Must Have Interent Conection and keyword provided by college"
        android:textSize="24sp"
        android:src="@drawable/pq"/>

</RelativeLayout>