<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADMIN ACCOUNT "
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@color/medium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:orientation="horizontal">
    <ImageButton
        android:padding="5dp"

        android:id="@+id/addRoomAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ROOM"
        android:textSize="24sp"
        android:background="@color/light"
        android:src="@drawable/pr"/>
    <ImageButton
        android:paddingLeft="10dp"
        android:padding="5dp"
        android:id="@+id/viewRoomAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW ROOM"
        android:textSize="24sp"
        android:background="@color/light"
        android:src="@drawable/p5"/>
</LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ADD ROOM"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:paddingLeft="85dp"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW Room"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageButton
        android:padding="5dp"
        android:id="@+id/addScheduleAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD SCHEDULE"
        android:background="@color/light"
        android:src="@drawable/p"
        android:textSize="24sp" />

    <ImageButton
        android:paddingLeft="15dp"
        android:padding="5dp"
        android:id="@+id/viewScheduleAdminButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW SCHEDULE OF CLASSES"
        android:textSize="24sp"
        android:background="@color/light"
        android:src="@drawable/p1"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ADD SCHEDULE"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:paddingLeft="45dp"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW SCHEDULE"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageButton
        android:layout_gravity="center"
        android:padding="0dp"
        android:id="@+id/availableRoomsAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVAILABLE FREE ROOMS"
        android:textSize="24sp"
        android:background="@color/medium"
        android:src="@drawable/p3"/>
    <TextView
        android:paddingLeft="112dp"
        android:textColor="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND ROOM"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>